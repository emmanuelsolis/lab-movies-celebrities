<h2>Edit the Movie: {{movieData.title}}</h2>
<form action="/movies/{{movieData._id}}/edit" method="POST">
  <label>Name:
    <input  type="text" name="name" value="{{movieData.title}}">
  </label>
  <label>Genre:
    <input  type="text" name="genre" value="{{movieData.genre}}">
  </label>
  <label>Plot:
    <textareaname="plot" cols="35" rows="10"> {{movieData.plot}} </textarea>
  </label>
  <label for="cast">Select Celebrities
    <div>
      <select name="cast" id="cast">
      {{#each celebData}}
        <option value="{{_id}}"> {{name}} </option>
      {{/each}}
      </select>
    </div>
  </label>
  <div >
    <div >
      <button type="submit">Save</button>
    </div>
  </div>
</form>

<a href="/">Back Home</a>